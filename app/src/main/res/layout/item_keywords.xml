<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/size_default_keyword_item"
    android:gravity="center"
    app:cardCornerRadius="@dimen/corner_radius_default">
    <TextView
        android:id="@+id/text_keyword"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_keyword_item"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:minWidth="@dimen/size_default_keyword_item"
        android:textColor="#ffffff" />
</android.support.v7.widget.CardView>