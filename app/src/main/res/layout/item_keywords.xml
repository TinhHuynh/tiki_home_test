<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_keyword_item_half"
    android:layout_marginTop="@dimen/margin_keyword_item"
    android:layout_marginEnd="@dimen/margin_keyword_item_half"
    android:layout_marginBottom="@dimen/margin_keyword_item"
    app:cardCornerRadius="@dimen/corner_radius_default">

    <TextView
        android:id="@+id/text_keyword"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_keyword_text"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:minWidth="@dimen/size_default_keyword_item"
        android:textColor="@color/color_white"
        tools:text="Keyword"
        tools:textColor="#000000" />
</android.support.v7.widget.CardView>